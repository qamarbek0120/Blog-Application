extends layout.pug 

block content   
    h1 Create Blog 


    if error 
        p.error Title cannot be empty. Please, fulfill the Title!  

    if success 
        p.success Blog has been created successfully! 

    if deserror 
        p.error Description cannot be empty. Please, fulfill the Description 
    if invalidtitle 
        p.error Title must have at least 3 characters 
    if invalidusername 
        p.error Please, enter a valid username 
    .form 
        form(action="/create" method='POST', enctype='multipart/form-data')
            .username 
                label Username
                input.input(type="text" name="username")  
            .heading
                label Title
                input.input(type="text" name="title")
            .describe
                label Description
                textarea.input(type="text", cols='30', rows='10' name="description")
            .category 
                label.label(for="") Choose category
                select.input(type="select" name="category")
                    option(value="")
                    option(value="Entertainment")  Entertainment 
                    option(value="Crime")  Crime
                    option(value="History")  History  
                    option(value="Creativity")  Creativity 
                    option(value="Education")  Eduation 
                    option(value="Religion")  Religion
            .upload
                label Upload Image
                input.image(type="file" name="image")
                
            button.btn Post 