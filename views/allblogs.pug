extends layout.pug 


block content 

    h1 All blogs


    if deleted  
        p.success Deleted successfully

    .blogcontainer 
         


        each blog in blogs
            .blog-wrapper 
                #blog-image 
                .blog-content   
                    a.blogs(href=`/allblogs/${ blog.id }`) #{ blog.title }   
                    a.edit(href='/${ blog.id }/edit') Edit  
                    a.delete(href=`/${ blog.id }/delete`)
                        img(src="/static/delete.png", alt="")

    button.allblogs-button  
        a(href="/create") Create Blog   
        